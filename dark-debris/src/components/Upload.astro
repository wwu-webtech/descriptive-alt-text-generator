<astro-upload>
  <div class="wwu-card horizontal dark-blue-bg">
    <div class="body">
      <!-- <dialog id="evaluate-error">
        <p id="evaluate-error-message"></p>
        <form method="dialog">
          <button>OK</button>
        </form>
      </dialog>
      <dialog id="evaluate-loading">
        <img src="/loading.gif" alt="Loading gif" style="width:100px;height:100px;">
      </dialog> -->
      <form style={{ marginTop: "20px", marginBottom: "20px" }}>
        <label for="file-input"><h3>File</h3></label>
        <input
          type="file"
          id="file-input"
          accept=".png,.jpg,.jpeg,.webp"
          style={{ width: "100%", cursor: "pointer" }}

        />
        <label for="prompt"><h3>Prompt<i style="font-size: 18px; float:right; color:#d5e381;">* Optional</i></h3></label>
        <textarea
          id="prompt"
          placeholder="Enter a prompt"
          rows="5"
          wrap="hard"
          style={{ width: "100%" }}
        >
        </textarea>
        
      </form>
      
      <button id="evaluate-image" style={{ marginBottom: "10px" }}
        >Evaluate Image</button
      >
      
    </div>
    <canvas
			role="img"
			aria-label="Image to generate"
      id="canvas"
      style={{ margin: "10px", objectFit: "contain", width: "95%" }}></canvas>
  </div>
</astro-upload>

<script>
  class AstroUpload extends HTMLElement {
    constructor() {
      super();
    }
  }
  document.getElementById("prompt").value = "";
  customElements.define("astro-upload", AstroUpload);
</script>

<script src="../js/UploadHelper.js"></script>
